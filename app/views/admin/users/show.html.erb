<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1><%= @user.email %></h1>
    </br>
      <div class="size">
        <table class="table table-striped table-bordered table-list " >
          <thead>
            <tr>
              <th><%= t "user.id"%></th>
              <th><%= t "user.emails" %></th>
              <th><%= t "user.name" %></th>
              <th><%= t "user.phone" %></th>
              <th><%= t "user.address" %></th>
              <th><%= t "user.create" %></th>
              <th><%= t "user.update" %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="hidden-xs"><%= @user.id %></td>
              <td class="hidden-xs"><%= @user.email %></td>
              <td class="hidden-xs"><%= @user.name %></td>
              <td class="hidden-xs"><%= @user.phone %></td>
              <td class="hidden-xs"><%= @user.address %></td>
              <td class="hidden-xs"><%= l @user.created_at,
                format: :short %></td>
              <td class="hidden-xs"><%= l @user.updated_at,
                format: :long %></td>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
